@model List<TrashCollector.Models.Employee>
@{
    ViewBag.Title = "Employees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> Employees</h2>

@if (!Model.Any())
{
    <p>There are no employees on file.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Employee</th>
                <th>Territory</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@Html.ActionLink(employee.FirstName + " " + employee.LastName, "Edit", "Employee", new { id = employee.Id }, null)</td>
                    <td>@employee.ZipCode.Code</td>
                </tr>
            }
        </tbody>
    </table>}