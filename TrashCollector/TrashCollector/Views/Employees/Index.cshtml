@model List<TrashCollector.Models.Employee>
@{
    ViewBag.Title = "Employees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> Employees</h2>
<p> @Html.ActionLink("Create Employee", "EmployeeForm", "Employees", null, new { @class = "btn btn-default" })</p>


@if (!Model.Any())
{
    <p>There are no employees on file.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Employee</th>
                <th>Route</th>
                <th>Territory</th>
            </tr>
        </thead>

        <tbody>


            @foreach (var employee in Model)
            {
                <tr>
                    <td>@Html.ActionLink(employee.FirstName + " " + employee.LastName, "Edit", "Employees", new { id = employee.Id }, null)</td>
                    <td>@Html.ActionLink("Display Route", "Route", "Employees", new { id = employee.Id }, null)</td>

                    <td>@employee.ZipCode.Code</td>
                </tr>
            }
        </tbody>
    </table>}